<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Round"
        android:id="@+id/roundView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Counter-Terrorists"
        android:id="@+id/factionView"
        android:layout_below="@+id/roundView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="italic"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win"
        android:id="@+id/winButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win + Eco"
        android:id="@+id/winEcoButton"
        android:layout_below="@+id/winButton"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lose"
        android:id="@+id/loseButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lose + Eco"
        android:id="@+id/loseEcoButton"
        android:layout_below="@+id/loseButton"
        android:layout_alignEnd="@+id/loseButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/ecoView"
        android:layout_below="@+id/factionView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#00FF00"
        android:textStyle="bold"/>
</RelativeLayout>